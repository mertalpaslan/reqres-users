<div>
  <% if collection.previous_page? %>
    <%= link_to 'First', homepage_show_path(page: 1 %>
    <%= link_to '< Previous', posts_path(page: collection.previous_page) %>
  <% else %>
    <p>First</p>
    <p>&#60; Previous</p>
  <% end %>
  <p><%= "Page #{collection.page} of #{collection.total_pages}" %></p>
  <% if collection.next_page? %>
    <%= link_to 'Next >', posts_path(page: collection.next_page) %>
    <%= link_to 'Last', posts_path(page: collection.total_pages) %>
  <% else %>
    <p>Next &#62;</p>
    <p>Last </p>
  <% end %>
</div>
